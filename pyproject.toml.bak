[tool.ruff]
line-length = 100
target-version = "py312"
exclude = ["venv", ".venv", "build", "dist", ".git", "qc", "tools"]

[tool.ruff.lint]
select = ["E", "F", "I", "B"]
ignore = [
  "E501",   # line length for now
  "B905",   # zip() without strict= (we can fix later)
]

[tool.ruff.format]
quote-style = "preserve"

[tool.mypy]
python_version = "3.12"
ignore_missing_imports = true
warn_unused_ignores = true
warn_redundant_casts = true
disallow_untyped_defs = false
exclude = ["tests/"]

[tool.bandit]
skips = ["B101"]
exclude_dirs = ["tests", "venv", ".venv", ".git", "build", "dist"]

[tool.ruff.lint.per-file-ignores]
"**/__init__.py" = ["F401"]  # allow re-export patterns in __init__.py
